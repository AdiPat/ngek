{
  "name": "ngek",
  "version": "1.0.0",
  "description": "Web Solutions from the Future",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css:scss": "node-sass --output-style compressed -o dist src/scss",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/*.css && mv dist/index.css dist/styles.css",
    "css:lint": "stylelint src/scss/*.scss --syntax scss || true",
    "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "watch": "run-p watch:html watch:css serve",
    "build": "run-s build:html build:css",
    "build:html": "posthtml -c posthtml.json",
    "watch:html": "onchange \"src/views\" -- npm run build:html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AdiPat/ngek.git"
  },
  "keywords": [
    "web",
    "web3",
    "engineering",
    "science",
    "consulting"
  ],
  "author": "Aditya Patange",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AdiPat/ngek/issues"
  },
  "homepage": "https://github.com/AdiPat/ngek#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "babel-loader": "^8.2.3",
    "browsersync": "^0.0.1-security",
    "eslint": "^8.11.0",
    "eslint-webpack-plugin": "^3.1.1",
    "htmlnano": "^2.0.0",
    "imagemin-cli": "^7.0.0",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-scss": "^4.0.3",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.10.0",
    "posthtml-modules": "^0.8.0",
    "stylelint": "^14.6.0",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "bootstrap": "^5.1.3"
  }
}
